{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-undef": "off",
    "no-debugger": "off",
    "no-cond-assign": "off",
    "no-unused-vars": "off",
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": ["case", "default"],
        "next": "*"
      },
      {
        "blankLine": "always",
        "prev": "*",
        "next": ["block-like"]
      }
    ],
    "padded-blocks": [
      "error",
      {
        "blocks": "never"
      }
    ]
  }
}
